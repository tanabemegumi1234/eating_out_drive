<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規登録</h5>
      <div class="form-body p-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="input-group mb-0 ">
        <div class="input-group-prepend">
        </div>
      </div>
    
      <div class="field">
        <%= f.label :'氏名' %><br>
        <%= f.text_field :full_name, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :'氏名（フリガナ）' %>
        <%= f.text_field :furigana, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :'電話番号' %>
        <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
    
    　<div class="field">
        <%= f.label :'ログインネーム' %>
        <%= f.text_field :login_name, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :'パスワード' %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :'パスワード確認用（再確認）' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      
      <div class="actions">
        <%= f.submit "会員登録", class: "btn btn-lg btn-block btn-info mt-4" %>
      </div>
      <% end %>
      <br>
      <h6>【新規登録済みの方】</h6>
      <p><%= link_to "こちら", new_user_session_path %>&emsp;からログインしてください。</p>
      </div>
    </div>
  </div>
</div>