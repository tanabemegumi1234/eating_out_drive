<h1>マイページ</h1>
<%= link_to '登録情報の変更', users_information_edit_path(@user) %>
<h2>登録情報</h2>
<table>
    <tr>
        <th>ユーザー画像</th>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
    </tr>
  
    <tr>
        <th>氏名</th>
        <td><%= @user.full_name %></td>
    </tr>

    <tr>
        <th>フリガナガ</th>
        <td><%= @user.furigana %></td>
    </tr>

    <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
    </tr>

    <tr>
        <th>電話番号</th>
        <td><%= @user.telephone_number %></td>
    </tr>

    <tr>
        <th>ログインネーム</th>
        <td><%= @user.login_name %></td>
    </tr>
</table>

<h2>MY投稿一覧</h2>

<table>
<% @posts.each do |post| %>
<tr>
 <%= link_to post_path(post.id) do %>
 <%= image_tag post.get_image %>
 <% end %>
</tr>

<tr>
 <th>店舗名</th>
 <td><%= post.name %></td>
</tr>

<tr>
 <th>店舗URL</th>
 <td><%= post.url %></td>
</tr>

<tr>
 <th>コメント</th>
 <td><%= post.introduction %></td>
</tr>

<tr>
 <th>駐車場</th>
 <td><%= post.parking %></td>
</tr>
<tr>
 <th>ユーザーネーム</th>
 <td><%= post.user.login_name %> </td>
</tr>
<tr>
 <th>ユーザ画像</th>
 <td><%= image_tag post.user.get_profile_image(100, 100) %></td>
</tr>
<tr>
  <td><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></td>
</tr>
<% end %>
<table>
