<h1>マイページ</h1>
<%= link_to '登録情報の変更', users_information_edit_path(@user) %>
<h2>登録情報</h2>
<table>
    <tr>
        <th>氏名</th>
        <td><%= @user.full_name %></td>
    </tr>
    
    <tr>
        <th>フリガナガ</th>
        <td><%= @user.furigana %></td>
    </tr>
    
    <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
    </tr>
    
    <tr>
        <th>電話番号</th>
        <td><%= @user.telephone_number %></td>
    </tr>
    
    <tr>
        <th>ログインネーム</th>
        <td><%= @user.login_name %></td>
    </tr>
</table>