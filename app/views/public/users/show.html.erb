<div class="container mt-5">
  <div class="row">
      <div class="col-md-2"></div> 
      <div class="col-md-8">
      <h2>登録情報</h2>
      <%= link_to '登録情報の変更', users_information_edit_path(@user), class: "btn btn-info" %>
      <div class="table-responsive">
        <table class="table table-bordered">

          <tr>
            <th class="table-secondary w-25">ユーザー画像</th>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
          </tr>
  
          <tr>
            <th class="table-secondary">氏名</th>
            <td><%= @user.full_name %></td>
          </tr>

          <tr>
            <th class="table-secondary">フリガナガ</th>
            <td><%= @user.furigana %></td>
          </tr>

          <tr>
            <th class="table-secondary">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th class="table-secondary">電話番号</th>
            <td><%= @user.telephone_number %></td>
          </tr>

          <tr>
            <th class="table-secondary">ログインネーム</th>
            <td><%= @user.login_name %></td>
          </tr>
        </table>
      </div>
  </div>
  </div>
</div>

<h2 class="text-center">〜MY投稿一覧〜</h2>
<div class="card w-50 mx-auto mt-4 shadow-lg">
  <% @posts.each do |post| %>
    <%= link_to post_path(post.id) do %>
     <%= image_tag post.get_image, class: "card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
         <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class: "text-dark") do %>
              <strong><i class="fa-solid fa-shop"></i><span> <%= post.name %></span></strong>
            <% end %>
          </p>
          <p class="card-text"><%= post.introduction %></p>
          <span><i class="fas fa-user"></i><%= post.user.login_name %> ｜ </span>
          <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></span>
      </div>
    </div>
  <% end %>
</div>
