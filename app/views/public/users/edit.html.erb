<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">登録情報編集画面</h5>
      <div class="form-body p-4">
      <%= form_with model: @user,url: users_information_path do |f| %>
      <div class="input-group mb-3 ">
        <div class="input-group-prepend">
        </div>
      </div>
      <div class="field">
      氏名<br>
      <%= f.text_field :full_name, class: "form-control" %>
      </div>
      <div class="field">
      フリガナ<br>
      <%= f.text_field :furigana, class: "form-control" %>
      </div>
      <div class="field">
      メールアドレス<br>
      <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="field">
      電話番号<br>
      <%= f.text_field :telephone_number, class: "form-control" %>
      </div>
      <div class="field">
      ログインネーム<br>
      <%= f.text_field :login_name, class: "form-control" %>
      </div>
      <div class="field">
      【アイコン画像】<br>
      <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>

      <%= f.submit '更新保存', class:"btn btn-info" %>
      <%= link_to '退会', users_quit_path,class:"btn btn-danger" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
