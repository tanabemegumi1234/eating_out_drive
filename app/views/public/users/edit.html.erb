<h1>登録情報編集画面</h1>
<%= form_with model: @user,url: users_information_path do |f| %>
<table>
    <tr>
       <th>氏名</th> 
       <td><%= f.text_field :full_name %></td>
    </tr>

    <tr>
       <th>フリガナ</th> 
       <td><%= f.text_field :furigana %></td>
    </tr>

    <tr>
       <th>メールアドレス</th> 
       <td><%= f.text_field :email %></td>
    </tr>

    <tr>
       <th>電話番号</th> 
       <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
       <th>ログインネーム</th> 
       <td><%= f.text_field :login_name %></td>
    </tr>
</table>
<%= f.submit '更新保存' %>
<%= link_to '退会', users_quit_path %>
<% end %>