<!DOCTYPE html>
<html>
  <head>
    <title>EatingOutDrive</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/54b4c06cb9.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <div style="background-color: #CCE7D3;">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand p-3" href="/posts"> EatingOutDrive </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
           
              <!-- user利用者側でログインしている時 -->
              <% if user_signed_in? %>
              <!--<ul style="list-style: none;"> 箇条書きの・を無くす -->
              <li class="nav-item">
                <%= link_to "投稿一覧",  posts_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "投稿",  new_post_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "マイページ",  users_my_page_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
              <!-- admin管理者側でログインしている時 -->
              <% elsif admin_signed_in? %>
        
              <li class="nav-item">
                <%= link_to "投稿一覧", admin_posts_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "使用者一覧", admin_users_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>
        
              <!-- ログインしていない時 -->
              <% else %>
        
              <li class="nav-item">
                <%= link_to "投稿一覧",  posts_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "新規登録",  new_user_registration_path, class: 'nav-link text-dark' %>
              </li>
        
              <li class="nav-item">
                <%= link_to "ログイン",  new_user_session_path, class: 'nav-link text-dark' %>
              </li>
              <% end %>
              </ul>
            </div>
      </nav>
      </div>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>