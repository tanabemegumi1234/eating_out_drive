<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <h2><%= @user.full_name %>さんの会員詳細</h2>
    <div class="table-responsive">
      <table class="table table-bordered">
    
      <tr>
        <th>会員ID</th>
        <td><%= @user.id %></td>
      </tr>
      
      <tr>
        <th>氏名</th>
        <td><%= @user.full_name %></td>
      </tr>
      
      <tr>
        <th>フリガナ</th>
        <td><%= @user.furigana %></td>
      </tr>
      
      <tr>
        <th>電話番号</th>
        <td><%= @user.telephone_number %></td>
      </tr>
      
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      
      <tr>
        <th>会員ステータス</th>
        <td><%= @user.user_status %></td>
      </tr>
      </table>
      <td> <%= link_to '編集する', edit_admin_user_path, class: "btn btn-info" %></td>
    </div>
    </div>
  </div>
</div>
