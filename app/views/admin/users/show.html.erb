<div class="container">
<h2><%= @user.full_name %>さんの会員詳細</h2>

<table>
<tr>
<th>会員ID</th>
<td><%= @user.id %></td>
</tr>

<tr>
<th>氏名</th>
<td><%= @user.full_name %></td>
</tr>

<tr>
<th>フリガナ</th>
<td><%= @user.furigana %></td>
</tr>

<tr>
<th>電話番号</th>
<td><%= @user.telephone_number %></td>
</tr>

<tr>
<th>メールアドレス</th>
<td><%= @user.email %></td>
</tr>

<tr>
<th>会員ステータス</th>
