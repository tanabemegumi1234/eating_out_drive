<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h4 class="text-dark bg-light p-4 mb-0"><%= @user.full_name %>さんの会員情報編集</h4>
    <div class="form-body p-4">
    <%= form_with model: @user,url: admin_user_path(@user.id), method: :patch do |f| %>
     <div class="input-group mb-3 ">
        <div class="input-group-prepend">
        </div>
     </div>
     氏名<%= f.text_field :full_name, class: "form-control" %>
     フリガナ<%= f.text_field :furigana, class: "form-control" %>
     電話番号<%= f.text_field :telephone_number, class: "form-control" %>
     メールアドレス<%= f.text_field :email, class: "form-control" %>
     会員ステータス<%= f.radio_button :is_deleted, :false %>
     <%= f.label :is_deleted, "有効", { value: :false }  %>
     <%= f.radio_button :is_deleted, :true %>
     <%= f.label :is_deleted, "退会", { value: :true } %>
     <p><%= f.submit '変更を保存', class: "btn btn-info" %></p>
    <% end %>
    </div>
    </div>
  </div>
</div>