<div class="container">
<h2><%= @user.full_name %>さんの会員情報編集</h2>


<%= form_with model: @user,url: admin_user_path(@user.id), method: :patch do |f| %>
<table>
<tr>
<th>氏名</th>
<td><%= f.text_field :full_name %></td>
</tr>

<tr>
<th>フリガナ</th>
<td><%= f.text_field :furigana %></td>
</tr>

<tr>
<th>電話番号</th>
<td><%= f.text_field :telephone_number %></td>
</tr>

<tr>
<th>メールアドレス</th>
<td><%= f.text_field :email %></td>
</tr>
<tr>
 <td>会員ステータス</td>
   <td>
     <%= f.radio_button :is_deleted, :false %>
     <%= f.label :is_deleted, "有効", { value: :false }  %>
            
    <%= f.radio_button :is_deleted, :true %>
       <%= f.label :is_deleted, "退会", { value: :true } %>
    </td>
  </tr>
</table>
<%= f.submit '変更を保存',class:"btn btn-success" %>
<% end %>
</div>